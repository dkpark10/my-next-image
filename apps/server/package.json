{
  "name": "next-image-server",
  "private": true,
  "scripts": {
    "dev": "nodemon src/server.js",
    "build": "rm -Rf ../resources/dist && NODE_ENV=production pnpm run build:webpack",
    "build:webpack": "webpack",
    "build:lib": "babel -d lib src",
    "start": "NODE_ENV=production node lib/server/server.js",
    "client:dev": "webpack-dev-server --config webpack.config.dev.js",
    "server:build": "pnpm run build:client && pnpm run build:server",
    "build:client": "webpack --env target=web --config webpack.config.prod.js",
    "build:server": "webpack --env target=node --config webpack.config.prod.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.7",
    "@babel/core": "^7.25.8",
    "@babel/node": "^7.25.7",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.7",
    "@loadable/babel-plugin": "^5.16.1",
    "@loadable/component": "^5.16.4",
    "@loadable/server": "^5.16.5",
    "@loadable/webpack-plugin": "^5.15.2",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "mini-css-extract-plugin": "^2.9.1",
    "nodemon": "^1.19.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "core-js": "^3.0.1",
    "express": "^4.16.4",
    "moment": "^2.24.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
